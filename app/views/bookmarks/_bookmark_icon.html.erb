<%# if @recipe.bookmarks.where(user_id: current_user.id).first %>

<% bookmark = current_user.bookmarks.find_by(recipe_id: locals[:recipe]) %>
<% if bookmark %>
    <%= link_to bookmark_path(bookmark), remote: true, method: :delete do %>
    <i class="fas fa-bookmark"></i>
    <% end %>
<% else %>
  <%= link_to recipe_bookmarks_path(locals[:recipe]), remote: true, method: :post do %>
  <i class="far fa-bookmark"></i>
  <% end %>
<% end %>


