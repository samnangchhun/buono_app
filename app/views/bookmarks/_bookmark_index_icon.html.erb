  <% unless recipe.reviews.empty? %>
    <% recipe.rating_average.times do %>
      <i class="fas fa-star"></i>
    <% end%>
    <% unless recipe.rating_average == 5 %>
      <% (5 - recipe.rating_average).times do  %>
        <i class="far fa-star"></i>
      <% end %>
    <% end %>
  <% end %>
  <div class="card-trip-infos" id="bookmark-index" data-bookmark-index-id="<%= recipe.id %>">
    <div>
      <h2><%= link_to recipe.title, recipe_path(recipe.id) %></h2>
    </div>
    <p class="card-trip-time"><%= recipe.cooking_time %> min</p>
    <% if bookmark = current_user.bookmarks.find_by(recipe_id: recipe.id) %>
      <%= link_to bookmark_path(bookmark.id), remote: true, method: :delete, locals: { recipe_id: recipe.id, page: 'bookmarks/index' } do %>
      <i class="fas fa-bookmark"></i>
      <% end %>
    <% end %>
  </div>
